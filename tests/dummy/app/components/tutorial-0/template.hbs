<div class="tutorial-example">

  {{! BEGIN-SNIPPET better-syntax-1 }}
  <button onclick={{action "findStores"}}>
    Find Nearby Stores
  </button>

  {{#if result}}
    {{#each result.stores as |s|}}
      <li>
        <strong>{{s.name}}</strong>:
        {{s.distance}} miles away
      </li>
    {{/each}}
  {{/if}}
  {{! END-SNIPPET }}

  <span class="tutorial-example-label">Example</span>
</div>
